generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id                          String                        @id @unique
  email                       String                        @unique
  role                        Role                          @default(USER)
  valid                       Boolean
  passwordVerificationRequest PasswordVerificationRequest[]
  emailVerificationRequest    EmailVerificationRequest[]
  Key                         Key[]
  Profile                     Profile?
  session                     Session[]

  @@map("user")
}

model Profile {
  id        String     @id @default(uuid())
  user_id   String     @unique
  postalZip String
  firstName String
  lastName  String
  country   String
  birthday  String
  phone     String
  myneCard  MyneCard[]
  user      User       @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("profile")
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("session")
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  primary         Boolean
  user            User    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("key")
}

model MyneCard {
  id                 String    @id @unique @default(uuid())
  user_id            String
  subCategory        String
  brand              String
  size               String
  purchasedFrom      String
  purchasedValue     String
  createdOn          DateTime  @default(now())
  isStolen           Boolean   @default(false)
  reportedStolenDate DateTime?
  isHeriloom         Boolean   @default(false)
  pictures           String[]  @default([])
  category           String
  description        String
  Profile            Profile   @relation(fields: [user_id], references: [user_id], onDelete: Cascade)

  @@map("myneCard")
}

model EmailVerificationRequest {
  id        String   @id @unique
  email     String
  token     String   @unique @default(uuid())
  user_id   String
  expiresAt DateTime
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("emailVerificationRequest")
}

model PasswordVerificationRequest {
  id        String   @id @unique
  token     String   @default(uuid())
  user_id   String
  expiresAt DateTime @db.Timestamp(1)
  email     String
  user      User     @relation(fields: [user_id], references: [id])
}

model brand {
  jewlery    String?
  watch      String?
  leather    String?
  frirearms  String?
  technology String?
  token      String?
  automobile String?
  motorcyle  String?
  dog        String?
  cat        String?
  bird       String?
  id         Int     @id @unique @default(autoincrement())
}

model stolenWatches {
  manufacture       String?
  reference_        String? @map("reference ")
  model             String?
  caseSerialNumber  String? @unique
  description       String?
  city              String?
  state             String?
  country           String?
  stolenDate        String?
  policeReference   String?
  interpolReference String?
  origin            String?
  id                Int     @id @unique @default(autoincrement())
}

enum Role {
  OWNR
  USER
  ADMIN
  DISTR
}
